<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin version="2">
  <name>WindowDressing</name>
  <version>2.1</version>

  <description><![CDATA[Adds open projects to the Window menu for easy switching between projects. A
    musthave on Mac OS X and pretty useful on other platforms too.]]></description>
  <change-notes><![CDATA[
    v2.1<br>
    * Remember and restore project window positions<br>
    * Fix incompatibility with IDEA 10.5
    <br>
    v2.0<br>
    * WindowDressing is now available for all IntelliJ Platform products<br>
    * New Next/Previous Project Window menu items with keyboard shortcuts<br>
    * Thanks to Maarten Hazewinkel<br>
  ]]></change-notes>

  <vendor url="http://twitter.com/inspectorbas" email="basleijdekkersYour Hat@gmail.com">Bas Leijdekkers (remove Your Hat to mail me;)</vendor>
  <idea-version since-build="93.13"/>
  <depends>com.intellij.modules.platform</depends>

  <project-components>
    <component>
      <implementation-class>net.intellij.window.WindowDressing</implementation-class>
    </component>
  </project-components>
  <actions>
    <action id="WindowDressing.NextWindow" class="net.intellij.window.NextWindow" text="Next Project Window"
            description="Switch to the next project window">
      <keyboard-shortcut keymap="$default" first-keystroke="control alt CLOSE_BRACKET"/>
    </action>
    <action id="WindowDressing.PreviousWindow" class="net.intellij.window.PreviousWindow" text="Previous Project Window"
            description="Switch to the previous project window">
      <keyboard-shortcut keymap="$default" first-keystroke="control alt OPEN_BRACKET"/>
    </action>
    <group id="net.intellij.window.WindowActionGroup"
           class="net.intellij.window.WindowActionGroup" text="WindowActionGroup"
           description="Open Project Windows">
      <add-to-group group-id="WindowMenu" anchor="last"/>
      <separator/>
      <reference ref="WindowDressing.NextWindow"/>
      <reference ref="WindowDressing.PreviousWindow"/>
    </group>
  </actions>
  <application-components>
    <component>
        <implementation-class>net.intellij.window.WindowPositionMemoizer</implementation-class>
    </component>
  </application-components>
</idea-plugin>